@model crudFirst.Models.class1
@{
    ViewBag.Title = "Adddata";
}

<link href="~/Content/css.css" rel="stylesheet" />



@using (Html.BeginForm("Adddata", "post", FormMethod.Post))
{
    <br>
    <br>
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Name", @required = "required" })


    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Email", @required = "required" })


    </div>
    <div class="form-group">
        <label>Dob</label>
        @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @placeholder = "Date of birth", @required = "required" })


    </div>
    <div class="form-group">
        <label>Address</label>
        @Html.TextBoxFor(m => m.address, new { @class = "form-control", @placeholder = "Address", @required = "required" })


    </div>
    <button type="submit" class="btn btn-success">Submit</button>
}